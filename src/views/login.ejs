<%- include('includes/header') %>
    <%- include('includes/nav') %>


        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Register or Login</h1>
                    <p class="text-center lead">x-x-x</p>

                    <%- include('includes/messages') %>

                    <div class="row">

                        <div class="col-lg m-4">
                            <h4>Register</h4>
                            <p>Don't have an account ? Signup Here !</p>

                            <form class="form-cadastro" action="/login/register" method="post">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group mb-3">
                                    <label for="email" class="form-label">Email address</label>
                                    <input type="email" class="form-control input-email-register" name="email">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="pswd" class="form-label">Password</label>
                                    <input type="password" class="form-control input-pswd-register" name="pswd">
                                </div>
                                <button type="submit" class="btn btn-primary">Register</button>
                            </form>
                        </div>


                        <div class="col-lg m-4">
                            <h4>Login</h4>
                            <p>Have an accout ? Login Here !</p>

                            <form class="form-login" action="/login/login" method="post">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                <div class="form-group mb-3">
                                    <label for="email" class="form-label">Email address</label>
                                    <input type="email" class="form-control" name="email">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="pswd" class="form-label">Password</label>
                                    <input type="password" class="form-control" name="pswd">
                                </div>

                                <button type="submit" class="btn btn-primary">Login</button>
                            </form>

                        </div>

                    </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>


        <%- include('includes/footer') %>